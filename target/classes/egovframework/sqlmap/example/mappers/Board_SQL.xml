<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.dashboard.service.impl.BoardMapper">

	<!-- 약국 목록 조회 (일단 30건만) -->
	<select id="boardlist" resultType="egovframework.example.dashboard.service.BoardVO">
		SELECT 
		        pharm_no
		      , sido_name
		      , pharm_name
		      , pharm_open
		  FROM tb_pharm
		ORDER BY pharm_no
		LIMIT #{pageindex}, #{pageSize}
	</select>
	
	<!-- 약국 목록 카운트 조회 -->
	<select id="countboardlist" resultType="egovframework.example.dashboard.service.BoardVO">
		SELECT COUNT(*)
		  FROM tb_pharm
	</select>

</mapper>